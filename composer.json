{
    "require": {
        "php": ">=8.1",
        "longman/telegram-bot": "^0.78.0",
        "vlucas/phpdotenv": "^5.4",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/database": "^9.27"
    },
    "autoload": {
        "files": [
            "src/Helpers/helpers.php"
        ],
        "psr-4": {
            "Termorize\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "scripts": {
        "migrate": "php ./src/Migrations/run_all_migrations.php",
        "test": "./vendor/bin/phpunit tests/",
        "style-fix" : "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --diff ./",
        "style-check" : "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --dry-run ./"

    }
}
